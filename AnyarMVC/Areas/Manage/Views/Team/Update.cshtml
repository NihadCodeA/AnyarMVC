@model Team
<div class="container">
    <div>
        <form asp-action="update" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-6">
                    <label asp-for="Fullname">Fullname</label>
                    <input asp-for="Fullname" class="form-control" placeholder="Fullname">
                    <span class="text-danger" asp-validation-for="Fullname"></span>
                </div>
                <div class="col-6">
                    <label asp-for="Postion">Postion</label>
                    <input asp-for="Postion" class="form-control" placeholder="Postion">
                    <span class="text-danger" asp-validation-for="Postion"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <label asp-for="About">About</label>
                    <textarea style="min-height:120px;" asp-for="About" class="form-control" placeholder="About"><</textarea>
                    <span class="text-danger" asp-validation-for="About"></span>
                </div>
                <div class="col-8">
                    <label asp-for="ImageFile">ImageFile</label>
                    <input asp-for="ImageFile" class="form-control" placeholder="ImageFile">
                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                </div>
                <div class="col-4">
                    <label asp-for="Order">Order</label>
                    <input asp-for="Order" type="number" class="form-control" placeholder="Order">
                    <span class="text-danger" asp-validation-for="Order"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>